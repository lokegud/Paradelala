# Example environment variables for Secure Home-Lab Setup
# Copy this file to .env and update with your values

# Basic Configuration
DOMAIN=example.com
TIMEZONE=UTC

# Generated Secrets (DO NOT SHARE)
# These will be automatically generated during setup
GRAFANA_PASSWORD=changeme
PIHOLE_PASSWORD=changeme
NEXTCLOUD_DB_PASSWORD=changeme
NEXTCLOUD_ADMIN_PASSWORD=changeme
GITLAB_ROOT_PASSWORD=changeme
VAULT_ROOT_TOKEN=changeme
REGISTRY_SECRET=changeme

# Optional: Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Optional: Home Server Configuration
HOME_SERVER_IP=192.168.1.100
HOME_SERVER_PORT=8080
